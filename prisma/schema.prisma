// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Auth tables 
model User {
  id        String  @id @default(cuid())
  firstName String?
  lastName  String?
  email     String  @unique
  password  String //Hashed password

  coachVoiceId String? // Foreign key to Coach
  coach        Coach?  @relation(fields: [coachVoiceId], references: [voiceId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Coach table
model Coach {
  voiceId String @id // Use voiceId as a primary key
  name    String

  users User[] @relation
}